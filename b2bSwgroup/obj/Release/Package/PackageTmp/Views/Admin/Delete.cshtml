@model b2bSwgroup.Models.ApplicationUser
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<h3>Вы действительно хотите удалить пользователя</h3>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-2">Пользователь</div>
        <div class="col-lg-2">@Html.DisplayFor(item => Model.UserName)</div>
    </div>
    <div class="row">
        <div class="col-lg-2">Организация</div>
        <div class="col-lg-2">@Html.DisplayFor(item => Model.Organization.Name)</div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Удалить" class="btn btn-default" /> |
        @Html.ActionLink("Назад к списку", "Index")
    </div>
}