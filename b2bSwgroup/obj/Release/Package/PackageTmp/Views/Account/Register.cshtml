@model b2bSwgroup.Models.RegisterModel

<script src="~/Scripts/jquery-3.2.1.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

@{ Html.RenderPartial("GoogleAnalytics"); }
@{ Html.RenderPartial("YandexMetrika"); }

@{
    ViewBag.Title = "Регистрация";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2 col-lg-offset-5">
                <h2>Регистрация</h2>
                @Html.ValidationSummary()
                <p>
                    <label>Email</label><br />
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                </p>
                <p>
                    <label>Пароль</label><br />
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                </p>
                <p>
                    <label>Подтверждение пароля</label><br />
                    @Html.PasswordFor(x => x.PasswordConfirm, new { @class = "form-control" })
                </p>
                <p><button class="btn btn-primary" type="submit">Зарегистрировать</button></p>
            </div>
        </div>

    </div>
}
