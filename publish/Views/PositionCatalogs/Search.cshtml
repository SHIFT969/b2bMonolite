@model IEnumerable<b2bSwgroup.Models.PositionCatalog>


<div class="row">
    <div class="col-lg-1 text-center"><strong>Артикул</strong></div>
    <div class="col-lg-1 text-center"><strong>P/N</strong></div>
    <div class="col-lg-2 text-center"><strong>Категория</strong></div>
    <div class="col-lg-3 text-center"><strong>Наименование</strong></div>
    <div class="col-lg-1 text-center"><strong>Прайс</strong></div>
    <div class="col-lg-1 text-center"><strong>Валюта</strong></div>
    <div class="col-lg-1 text-center"><strong>Поставщик</strong></div>
    <div class="col-lg-2 text-center"></div>
</div>
<hr />
@foreach (var item in Model)
{
    <div class="row">
        <div class="col-lg-1 ">@Html.DisplayFor(modelItem => item.Articul)</div>
        <div class="col-lg-1 ">@Html.DisplayFor(modelItem => item.PartNumber)</div>
        <div class="col-lg-2 ">@Html.DisplayFor(modelItem => item.Category.Name)</div>
        <div class="col-lg-3 ">@Html.DisplayFor(modelItem => item.Name)</div>
        <div class="col-lg-1 ">@Html.DisplayFor(modelItem => item.Price)</div>
        <div class="col-lg-1 ">@Html.DisplayFor(modelItem => item.Currency.IsoCode)</div>
        <div class="col-lg-1 ">
            @if (User.Identity.IsAuthenticated)
                {
                @Html.DisplayFor(modelItem => item.Distributor.Name)
            }
            else
            {
                @Html.ActionLink("Зарегистрироваться", "Register", "Account")
            }
        </div>
        <div class="col-lg-2">
            @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
            {
                @Html.ActionLink("Добавить к спецификации", "SelectSpecForAdd", "Specifications", new { idPosition = item.Id }, new { @class = "modalindex" })
            }
        </div>
    </div>
}
<br />