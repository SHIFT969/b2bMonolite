@model IEnumerable<b2bSwgroup.Models.PositionCatalog>

@{
    ViewBag.Title = "Мой справочник";
    Layout = "~/Views/Shared/_Main.cshtml";
}
<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>
<h2>Каталог моей компании</h2>

<p>
    @Html.ActionLink("Создать позицию", "Create")
    @Html.ActionLink("Загрузить каталог из excel", "UploadExcel",null, new { @class = "modalupload" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Articul)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Distributor.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DistributorApplicationUser.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Currency.IsoCode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Articul)
        </td>    
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.Distributor.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DistributorApplicationUser.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PartNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Currency.IsoCode)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>


<script>
    $('.modalupload').click(function (e)
    {
        e.preventDefault();
        $.ajax({
            url: this.href,
            success: function (result) {
                //$('#modDialog').modal('hide');
                //alert("ффф");
                $('#dialogContent').html(result);
                $('#modDialog').modal('show');
            },
            error: function () {
                alert("Ошибка");
            }
        });
    });
</script>