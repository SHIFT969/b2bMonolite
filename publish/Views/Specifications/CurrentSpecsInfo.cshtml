@model b2bSwgroup.Models.Specification
<style>
    .nonelink {
        color:black;
        text-decoration: none; /* Отменяем подчеркивание у ссылки */
    }
</style>
@if (Model != null)
{
    <a class="nonelink" href=@Url.Action("Edit","Specifications",new { id=Model.Id })>
        <div style="display:inline-flex; margin:5px">
            <div style="position:relative; display:inline-block;margin:auto 0 auto 0">
                <img height="32" src="~/Images/spec-icon.png" />
                <span style="position:absolute;top:-5px;right:-5px;background-color:orangered;border-radius:20px; width:20px;height:20px;text-align:center" id="quantity-spec">@Model.PositionsSpecification.Count</span>
            </div>
            <div style="display:inline-block; width:150px;margin:auto 0 auto 5px">
                <span id="name-spec">@Model.Name</span>
            </div>
        </div>
    </a>
}
else
{
    <div style="display:inline-flex; margin:5px">
        <div style="position:relative; display:inline-block;margin:auto 0 auto 0">
            <img height="32" src="~/Images/spec-icon.png" />            
        </div>
        <div style="display:inline-block; width:150px;margin:auto 0 auto 5px">
            <span id="name-spec">Нет активных спецификаций</span>
        </div>
    </div>
}



